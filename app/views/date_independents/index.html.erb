<div class="contextual">
  <%= link_to l(:label_date_independent_new), 
      new_date_independent_path, :class => 'icon icon-add' %>
</div>

<%= title l(:label_date_independent_plural) %>

<% if (@date_independents.blank?) %>
  <p class="nodata"><%= l(:label_no_data) %></p>
<% else %>

<table class="list date_independent">
  <thead>
    <tr>
      <%= sort_header_tag('id', :caption => '#') %>
      <%= sort_header_tag('is_enabled', :caption => l(:field_is_enabled)) %>
      <%= sort_header_tag('title', :caption => l(:field_title)) %>
      <%= sort_header_tag('project_pattern', :caption => l(:field_project_pattern)) %>
      <%= sort_header_tag('calculate_status_pattern', :caption => l(:field_calculate_status_pattern)) %>
    </tr>
  </thead>
  <tbody>
    <% @date_independents.each do |date_independent| %>
    <tr class="<%= cycle('odd', 'even') %><%= ' disable' unless date_independent.is_enabled %>">
      <td class="id"><%= link_to date_independent.id, date_independent_path(date_independent.id) %></td>
      <td class="is_enabled"><%=h date_independent.is_enabled ? l(:general_text_yes) : l(:general_text_no) %></td>
      <td class="title"><%=h date_independent.title%></td>
      <td class="project_pattern"><%=h date_independent.project_pattern%></td>
      <td class="calculate_status_pattern"><%=h date_independent.calculate_status_pattern%></td>
    </tr>
    <% end %>
  </tbody>
</table>

<% end %>
